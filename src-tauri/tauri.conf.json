{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sarah",
  "version": "0.1.0",
  "identifier": "com.ai.sarah",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sarah AI",
        "width": 520,
        "height": 220,
        "minWidth": 520,
        "minHeight": 88,
        "center": true,
        "resizable": false,
        "maximizable": true,
        "minimizable": false,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
