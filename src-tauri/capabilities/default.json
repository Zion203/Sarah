  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for app windows",
  "windows": ["main", "settings", "history", "mcp", "models", "audio"],
  "permissions": [
    "core:default",
    "core:window:allow-close",
